# Create a new directory and enter it
function mkd() {
  mkdir -p "$@" && cd "$@"
}

function cap() {
  git commit -m "$@" && git push
}

function dtime() {
  python3 ~/dtime.py "$@"
}

function now() {
  python3 ~/now.py
}

# Determine size of a file or total size of a directory
function fs() {
	if du -b /dev/null > /dev/null 2>&1; then
		local arg=-sbh;
	else
		local arg=-sh;
	fi
	if [[ -n "$@" ]]; then
		du $arg -- "$@";
	else
		du $arg .[^.]* ./*;
	fi;
}

